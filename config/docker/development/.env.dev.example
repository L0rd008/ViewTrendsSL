# ViewTrendsSL Development Environment Variables
# Copy this file to .env.dev and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-super-secret-development-key-here

# Application Settings
APP_NAME=ViewTrendsSL
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (Primary)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/viewtrendssl_dev
DB_HOST=postgres
DB_PORT=5432
DB_NAME=viewtrendssl_dev
DB_USER=postgres
DB_PASSWORD=postgres

# SQLite Database (Fallback/Testing)
SQLITE_DATABASE_PATH=/app/data/viewtrendssl_dev.db

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache Settings
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=viewtrendssl:dev:

# =============================================================================
# YOUTUBE API CONFIGURATION
# =============================================================================

# YouTube Data API v3 Keys (Get from Google Cloud Console)
YOUTUBE_API_KEY=your-youtube-api-key-1
YOUTUBE_API_KEY_2=your-youtube-api-key-2
YOUTUBE_API_KEY_3=your-youtube-api-key-3

# API Quota Management
YOUTUBE_QUOTA_LIMIT=10000
YOUTUBE_QUOTA_RESET_HOUR=0
YOUTUBE_REQUEST_DELAY=1

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Password Hashing
BCRYPT_LOG_ROUNDS=12

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000,http://127.0.0.1:5000

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate Limiting Configuration
RATE_LIMIT_STORAGE_URL=redis://redis:6379/1
RATE_LIMIT_DEFAULT=100 per hour
RATE_LIMIT_LOGIN=5 per minute
RATE_LIMIT_PREDICTION=10 per minute

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Settings
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=/app/data/logs/viewtrendssl_dev.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Jupyter Configuration
JUPYTER_TOKEN=dev-token
JUPYTER_PASSWORD=
JUPYTER_ENABLE_LAB=yes

# Database Admin Tools
ADMINER_DEFAULT_SERVER=postgres
ADMINER_DESIGN=pepa-linha

# Redis Commander
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin

# =============================================================================
# DATA COLLECTION SETTINGS
# =============================================================================

# Data Collection Configuration
DATA_COLLECTION_ENABLED=true
DATA_COLLECTION_INTERVAL=3600
DATA_COLLECTION_BATCH_SIZE=50
DATA_COLLECTION_MAX_RETRIES=3

# Sri Lankan Channel Detection
SL_KEYWORDS=sri lanka,sinhala,tamil,colombo,kandy,galle
SL_LANGUAGE_CODES=si,ta,en
SL_COUNTRY_CODE=LK

# =============================================================================
# MACHINE LEARNING SETTINGS
# =============================================================================

# Model Configuration
MODEL_PATH=/app/data/models
MODEL_CACHE_SIZE=100
MODEL_PREDICTION_TIMEOUT=30

# Feature Engineering
FEATURE_CACHE_ENABLED=true
FEATURE_CACHE_TTL=3600

# =============================================================================
# MONITORING & METRICS
# =============================================================================

# Application Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Metrics Collection
METRICS_ENABLED=true
METRICS_PORT=9090

# Health Check Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=30

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Configuration (for notifications)
MAIL_SERVER=localhost
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@viewtrendssl.com

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#development

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://postgres:postgres@postgres-test:5432/viewtrendssl_test
TEST_REDIS_URL=redis://redis-test:6379/0

# Test Settings
TESTING=false
WTF_CSRF_ENABLED=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Container Settings
COMPOSE_PROJECT_NAME=viewtrendssl-dev
COMPOSE_FILE=config/docker/development/docker-compose.dev.yml

# Volume Settings
POSTGRES_DATA_VOLUME=viewtrendssl-postgres-dev-data
REDIS_DATA_VOLUME=viewtrendssl-redis-dev-data
APP_DATA_VOLUME=viewtrendssl-app-dev-data

# =============================================================================
# DEVELOPMENT SPECIFIC SETTINGS
# =============================================================================

# Debug Settings
DEBUG_TOOLBAR_ENABLED=true
PROFILER_ENABLED=false

# Hot Reloading
FLASK_RUN_RELOAD=true
FLASK_RUN_DEBUGGER=true

# Development Data
LOAD_SAMPLE_DATA=true
SAMPLE_DATA_SIZE=1000

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_UI_DOC_EXPANSION=list
SWAGGER_UI_OPERATION_ID=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Worker Configuration
WORKERS=1
WORKER_CLASS=sync
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Timeout Settings
TIMEOUT=30
KEEPALIVE=2

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Database Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/app/data/backups

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
FEATURE_USER_REGISTRATION=true
FEATURE_SOCIAL_LOGIN=false
FEATURE_PREMIUM_FEATURES=false
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_BATCH_PREDICTIONS=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Replace all placeholder values with your actual configuration
# 2. Never commit this file with real secrets to version control
# 3. Use strong, unique passwords and keys for production
# 4. Regularly rotate API keys and secrets
# 5. Monitor API usage to avoid quota limits
