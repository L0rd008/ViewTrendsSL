# ViewTrendsSL Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Flask Configuration
FLASK_APP=src.application.api.app:create_app
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production

# Application Settings
APP_NAME=ViewTrendsSL
APP_VERSION=1.0.0
APP_HOST=localhost
APP_PORT=5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (choose one based on your setup)
# For development (SQLite)
DATABASE_URL=sqlite:///data/viewtrendssl.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/viewtrendssl

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# YOUTUBE API CONFIGURATION
# =============================================================================

# YouTube Data API v3 Keys (get from Google Cloud Console)
YOUTUBE_API_KEY_1=your-youtube-api-key-1
YOUTUBE_API_KEY_2=your-youtube-api-key-2
YOUTUBE_API_KEY_3=your-youtube-api-key-3

# API Quota Management
YOUTUBE_API_QUOTA_LIMIT=10000
YOUTUBE_API_REQUESTS_PER_SECOND=1

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Password Hashing
BCRYPT_LOG_ROUNDS=12

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# =============================================================================
# REDIS CONFIGURATION (for caching and rate limiting)
# =============================================================================

# Redis Connection
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Cache Settings
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=viewtrendssl:

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate Limiting Configuration
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
RATE_LIMIT_DEFAULT=100 per hour
RATE_LIMIT_PREDICTION=10 per minute
RATE_LIMIT_AUTH=5 per minute

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/viewtrendssl.log

# Structured Logging
ENABLE_STRUCTURED_LOGGING=true
LOG_REQUEST_ID=true

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Sentry Configuration (for error tracking)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Health Checks
HEALTH_CHECK_ENABLED=true

# =============================================================================
# DATA COLLECTION CONFIGURATION
# =============================================================================

# Data Collection Settings
DATA_COLLECTION_ENABLED=true
DATA_COLLECTION_INTERVAL=3600
DATA_COLLECTION_BATCH_SIZE=50

# Data Storage Paths
DATA_RAW_PATH=data/raw
DATA_PROCESSED_PATH=data/processed
DATA_SNAPSHOTS_PATH=data/snapshots
DATA_LOGS_PATH=data/logs

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================

# Model Settings
ML_MODEL_PATH=models
ML_SHORTS_MODEL=shorts_model.joblib
ML_LONGFORM_MODEL=longform_model.joblib

# Feature Engineering
FEATURE_CACHE_ENABLED=true
FEATURE_CACHE_TTL=1800

# Model Performance
MODEL_CONFIDENCE_THRESHOLD=0.7
MODEL_RETRAIN_INTERVAL=604800

# =============================================================================
# TASK SCHEDULING
# =============================================================================

# APScheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=Asia/Colombo

# Data Collection Jobs
COLLECT_VIDEOS_CRON=0 */6 * * *
TRACK_PERFORMANCE_CRON=0 */1 * * *
PROCESS_DATA_CRON=0 2 * * *

# =============================================================================
# EMAIL CONFIGURATION (optional)
# =============================================================================

# SMTP Settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Email Settings
MAIL_DEFAULT_SENDER=noreply@viewtrendssl.com
ADMIN_EMAIL=admin@viewtrendssl.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Social Blade API (optional)
SOCIAL_BLADE_API_KEY=your-social-blade-api-key

# Google Trends (optional)
GOOGLE_TRENDS_ENABLED=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Tools
FLASK_DEBUG_TOOLBAR=true
PROFILER_ENABLED=false

# Testing
TESTING=false
TEST_DATABASE_URL=sqlite:///test_viewtrendssl.db

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production Security
FORCE_HTTPS=false
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Production Performance
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=30
GUNICORN_KEEPALIVE=2

# Static Files (for production)
STATIC_FOLDER=static
STATIC_URL_PATH=/static

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
ENABLE_USER_REGISTRATION=true
ENABLE_BATCH_PREDICTIONS=true
ENABLE_ANALYTICS_DASHBOARD=true
ENABLE_CHANNEL_ANALYTICS=true
ENABLE_TRENDING_ANALYSIS=true

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_A_B_TESTING=false

# =============================================================================
# LOCALIZATION
# =============================================================================

# Language Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,si,ta
TIMEZONE=Asia/Colombo

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Settings
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=backups

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Add your custom environment variables here
# CUSTOM_SETTING=value
